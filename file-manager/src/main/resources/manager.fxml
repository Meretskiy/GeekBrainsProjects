<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ru.meretskiy.file.manager.Controller">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#exitAction"/>
        </Menu>
    </MenuBar>

    <HBox VBox.vgrow="ALWAYS">
    <fx:include fx:id="leftPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
    <fx:include fx:id="rightPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Copy" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Move" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Delete" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="View" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Exit" HBox.hgrow="ALWAYS" onAction="#exitAction"/>
        <padding>
            <Insets bottom="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>

</VBox>
